@model MovieLibrary.Web.ViewModels.Categories.InputCreateCategoryViewModel
<div class="container text-center">
    <br />
    <fieldset class="border border-white">
        <legend style="width:auto;padding:10px;">
            Add new category
        </legend>
        <hr />
        <form class="form-horizontal" method="post">
            <div class="mb-3 row">
                <label class="col-form-label col-sm-2" asp-for="Name">Category Name</label>
                <div class="col-sm-8">
                    <input name="name" asp-for="Name" type="text" class="form-control" id="category-name" placeholder="Enter new category">
                    <div asp-validation-summary="All" class="text-danger"></div>
                </div>
            </div>

            <div class="form-group">
                <div class="d-flex justify-content-center">
                    <button type="submit" class="btn btn-primary rounded-pill">Submit</button>
                    <a class="btn btn-primary rounded-pill" href="/Categories/All" role="button">Cancel</a>
                </div>
            </div>
        </form>
    </fieldset>
    <br />
</div>
<vc:categories-of-movie>
</vc:categories-of-movie>
@section Path{
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="#">Home</a></li>
        <li class="breadcrumb-item"><a href="/Categories/All">Categories</a></li>
        <li class="breadcrumb-item active" aria-current="page">Add New Category</li>
    </ol>

}
