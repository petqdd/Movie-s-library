@model MovieLibrary.Web.ViewModels.Categories.InputCreateCategoryViewModel
@if (this.TempData.ContainsKey("Message"))
{
    <div class="alert alert-success alert-dismissible">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        @TempData["Message"]
    </div>
}
@{
    this.ViewData["Title"] = "Add new category";
}
<div class="container text-center">
    <br />
    <fieldset class="border border-white">
        <legend style="width:auto;padding:10px;">
            @this.ViewData["Title"]
        </legend>
        <form class="form-horizontal" method="post">
            <div class="mb-3 row">
                <label class="col-form-label col-sm-2" asp-for="Name">Category Name</label>
                <div class="col-sm-8">
                    <input name="name" asp-for="Name" type="text" class="form-control" id="category-name" placeholder="Enter new category">
                    <div asp-validation-summary="All" class="text-danger"></div>
                </div>
            </div>

            <div class="form-group">
                <div class="d-flex justify-content-center">
                    <button type="submit" class="btn btn-primary rounded-pill">Submit</button>
                    <a class="btn btn-primary rounded-pill" asp-controller="Categories" asp-action="All" role="button">Cancel</a>
                </div>
            </div>
        </form>
    </fieldset>
    <br />
</div>
