@model MovieLibrary.Web.ViewModels.Categories.InputCreateCategoryViewModel
@{ this.ViewData["Title"] = "Edit category";
}
<div class="container text-center">
    <fieldset class="border border-white">
        <legend style="width:auto;padding:10px;">
            Edit category
        </legend>
        <form class="form-horizontal" method="post">
            <div class="mb-3 row">
                <label asp-for="Name" class="col-form-label col-sm-2">Category Name</label>
                <div class="col-sm-8">
                    <input asp-for="Name" type="text" class="form-control" id="name" placeholder="@(Model.Name)">
                    <div asp-validation-summary="All" class="text-danger"></div>
                </div>
            </div>
            <div class="form-group">
                <div class="d-flex justify-content-center">
                    <button type="submit" class="btn btn-primary rounded-pill">Submit</button>
                    <a class="btn btn-primary rounded-pill" href="/Categories/All" role="button">Cancel</a>
                </div>
            </div>
        </form>
    </fieldset>
</div>
@section Path{
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="#">Home</a></li>
        <li class="breadcrumb-item"><a href="/Categories/All">Categories</a></li>
        <li class="breadcrumb-item active" aria-current="page">Edit Category</li>
    </ol>
}
