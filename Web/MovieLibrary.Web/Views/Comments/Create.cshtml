@model MovieLibrary.Web.ViewModels.Comments.InputCommentViewModel
@{
    ViewData["Title"] = "Add comment";
}
<div class="conteiner text-center">
    @if (this.TempData.ContainsKey("Message"))
    {
        <div class="alert alert-success alert-dismissible">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            @TempData["Message"]
        </div>
    }
    <fieldset class="border border-white">
        <legend style="width:auto;padding:10px;">
            @ViewData["Title"]
        </legend>

        <form class="form-horizontal" method="post">
            <div class="mb-3 row">
                <label asp-for="Content" class="col-form-label col-sm-2">Your Comment:</label>
                <div class="col-sm-8">
                    <input asp-for="Content" type="text" class="form-control" id="content" placeholder="Enter your comment...">
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="d-flex justify-content-center">
                    <button type="submit" class="btn btn-primary rounded-pill">Submit</button>
                    <a class="btn btn-primary rounded-pill" asp-controller="Comments" asp-action="AllComments" asp-route-id="@Model.Id" role="button">Cancel</a>
                </div>
            </div>
            @section Path{
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/Movies/All">Home</a></li>
                    <li class="breadcrumb-item"><a asp-controller="Movies" asp-action="All">Movies</a></li>
                    <li class="breadcrumb-item"><a asp-controller="Movies" asp-action="Details" asp-route-id="@Model.Id">Detail</a></li>
                    <li class="breadcrumb-item"><a asp-controller="Comments" asp-action="AllComments" asp-route-id="@Model.Id">Comments</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Create Comment</li>
                </ol>
            }
        </form>
    </fieldset>
</div>

