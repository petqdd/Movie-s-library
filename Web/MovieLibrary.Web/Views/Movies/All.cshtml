
@using MovieLibrary.Common
@model MovieLibrary.Web.Views.ViewModels.AllMoviesViewModel
@{
    this.ViewData["Title"] = $"All movies";
}
<fieldset class="border border-white text-md-left" style="color:white">

        <legend style="width:auto;padding:10px;">
            <span>@ViewData["Title"]</span>
        </legend>
   
        @if (Model.Movies.Count() == 0)
        {
            <br />
            <h4><i> There are no movies in this category. </i></h4>
            <br />
        }
        <div class="container text-center">
            <div class="row gx-5 justify-content-around">
                @foreach (var movie in Model.Movies)
                {
                    List<string> categories = movie.Categories.ToList();
                    string categoriesAsString = string.Join(", ", categories);

                    <div class="card-group p-1">
                        <div class="card" id="cardMovie">
                            <div class="img-fluid ">
                                <a asp-controller="Movies" asp-action="Details" asp-route-id="@movie.Id">
                                    <img class="card-img-top" src=@movie.PosterPath alt="Film image" id="cardImage">
                                </a>
                                @if (this.User.IsInRole(GlobalConstants.AdministratorRoleName))
                                {
                                    <a id="deleteButton" asp-controller="Movies" asp-action="Delete" asp-route-id="@movie.Id" class="btn btn-danger btn-icon rounded-pill" data-toggle="tooltip" data-placement="top" title="Remove movie"><i class="far fa-trash-alt"></i></a>
                                    <a id="editButton" asp-controller="Movies" asp-action="Edit" asp-route-id="@movie.Id"  class="btn btn-primary btn-icon rounded-pill" data-toggle="tooltip" data-placement="top" title="Edit movie"><i class="far fa-edit"></i></a>
                                }
                            </div>
                            <div class="card-body text-white" id="movieCardBody">
                                <p class="card-text">
                                    @movie.Name (@movie.Year)
                                </p>
                            </div>

                        </div>
                    </div>
                }
            </div>
            <hr />
            <partial name="_PagingPartial" model="@Model" />
        </div>
    </fieldset>


@section Path{
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">Movies</li>
    </ol>
}