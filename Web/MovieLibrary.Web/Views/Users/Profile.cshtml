@model MovieLibrary.Web.ViewModels.Users.InputUsersViewModel
@{
    ViewData["Title"] = "Add profile picture";
}
<div class="container text-center">
    <fieldset class="border border-white">
        <legend style="width:auto;padding:10px;">
            @ViewData["Title"]
        </legend>
        <form class="form-horizontal" method="post" enctype="multipart/form-data">
            <div class="mb-3 row">
                <label asp-for="Photo" class="col-form-label col-sm-2"></label>
                <div class="col-sm-8">
                    <input asp-for="Photo" class="form-control" />
                    <span asp-validation-for="Photo" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="form-group">
                <div class="d-flex justify-content-center">
                    <button type="submit" class="btn btn-primary rounded-pill">Submit</button>
                    <a class="btn btn-primary rounded-pill" asp-controller="Movies" asp-action="All" role="button">Cancel</a>
                    <br />
                </div>
            </div>

        </form>
</fieldset>
</div>
@section Path{
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/Movies/All">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">Add Profile Picture</li>
    </ol>
}